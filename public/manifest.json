  "shortcuts": [
    {
      "name": "Новая тренировка",
      "short_name": "Тренировка",
      "description": "Добавить новую тренировку",
      "url": "/workouts/new",
      "icons": [{ "src": "/icons/dumbbell-96.png", "sizes": "96x96" }]
    },
    {
      "name": "Добавить вес",
      "short_name": "Вес",
      "description": "Записать текущий вес",
      "url": "/progress/weight",
      "icons": [{ "src": "/icons/scale-96.png", "sizes": "96x96" }]
    },
    {
      "name": "Дневник питания",
      "short_name": "Питание",
      "description": "Записать приём пищи",
      "url": "/nutrition/add",
      "icons": [{ "src": "/icons/apple-96.png", "sizes": "96x96" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Панель управления"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+fitmaster",
      "url": "/handle-protocol?type=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 360
  },
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "permissions": [
    "notifications",
    "storage",
    "background-sync"
  ],
  "id": "/?source=pwa",
  "prefer_related_applications": false
}