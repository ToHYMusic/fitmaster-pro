{
  "name": "FitMaster Pro",
  "short_name": "FitMaster",
  "description": "PWA Фитнес-Трекер с геймификацией. Отслеживайте тренировки, питание и прогресс оффлайн.",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "minimal-ui"],
  "orientation": "portrait-primary",
  "scope": "/",
  "theme_color": "#7c3aed",
  "background_color": "#0f172a",
  "categories": ["health", "fitness", "lifestyle", "productivity"],
